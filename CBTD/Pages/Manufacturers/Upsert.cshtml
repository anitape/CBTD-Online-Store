@page
@model CBTD.Pages.Manufacturers.UpsertModel
@{


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">@(Model.objManufacturer.ManufacturerId != 0 ? "Update " : "Create ") Manufacturer</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="objManufacturer.ManufacturerName" class="form-control border-0 shadow" />
                    <label asp-for="objManufacturer.ManufacturerName" class="ms-2">Manufacturer Name</label>
                    <span asp-validation-for="objManufacturer.ManufacturerName" class="text-danger"></span>

                </div>
                @if (Model.objManufacturer.ManufacturerId != 0)
                {
                    <input type="hidden" asp-for="objManufacturer.ManufacturerId" />
                }

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create/Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-page="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
}

